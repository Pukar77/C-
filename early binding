// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
class pukar{
    public:
    void display(){
        cout<<"I am pukar rimal"<<endl;
    }
};
class rimal:public pukar{
    public:
    void display(){
        cout<<"I am a coder"<<endl;
    }
};
int main() {
    pukar *ptr;
    rimal r;
    ptr= &r;
    ptr-> display();


    return 0;
}  //output=i am pukar rimal.
